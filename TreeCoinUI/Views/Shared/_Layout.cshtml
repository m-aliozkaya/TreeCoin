                                <div class="form-group">
                                    <label>TC</label>
                                    <input type="text"
                                           class="form-control"
                                           required="required"
                                           name="userName" />
                                </div>
                            </div>
                            <div class="col-md">
                                <div class="form-group">
                                    <div class="clearfix">
                                        <label>Telefon</label>
                                    </div>
                                    <input type="email"
                                           class="form-control"
                                           required="required"
                                           name="userEmail" />
                                </div>
                            </div>
                            <div class="col-md">
                                <div class="form-group">
                                    <div class="clearfix">
                                        <label>Email</label>
                                    </div>
                                    <input type="password"
                                           class="form-control"
                                           required="required"
                                           name="userPassword" />
                                </div>
                            </div>
                            <div class="col-md">
                                <div class="form-group">
                                    <div class="clearfix">
                                        <label>Adres</label>
                                    </div>
                                    <textarea name="deneme" class="form-group col-md" id="deneme" rows="5"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer justify-content-end">
                            <button type="submit"
                                    name="userRegister"
                                    class="btn btn-success"
                                    value="Register">
