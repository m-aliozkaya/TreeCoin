@model IEnumerable<TreeCoinUI.Models.Dukkanim>

@{
    ViewBag.Title = "Dukkanim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                Ürünlerim
            </h4>
        </div>
        <div class="card-body p-0 m-0">
            <div class="table-responsive-md">
                <table class="table table-striped table-info m-0">
                    <thead>
                        <tr>
                            <td>Ad</td>
                            <td>Resim</td>
                            <td>Fiyat</td>
                            <td>Miktar</td>
                            <td>Durum</td>
                            <td>İşlemler</td>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td><img src="~/Images/products/@item.Image" class="img-fluid" style="max-height: 150px;" alt="Armut"></td>
                                <td>@item.Price TL</td>
                                <td>@item.QuantityValue</td>
                                @if (item.IsApproved)
                                {
                                    <td>Onaylı Ürün</td>
                                }
                                else
                                {
                                    <td>Onay Bekleniyor</td>

                                }
                                <td class="d-flex">
                                    <button class="btn btn-danger btn-sm mr-2">Sil</button>
                                    <button class="btn btn-primary btn-sm">Düzenle</button>
                                </td>
                            </tr>
                        }



                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
