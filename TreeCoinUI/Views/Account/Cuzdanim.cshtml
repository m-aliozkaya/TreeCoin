
@{
    ViewBag.Title = "Cuzdanim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="card mx-auto">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="m-0">Cüzdanım</h3>
                </div>
                <div class="col">
                    <div class="row align-items-center">
                        <i class="fas fa-wallet fa-2x mr-3"></i>
                        <div class="d-flex flex-column">
                            <span><small>Bakiye</small></span>
                            <span class="text-wallet text-success"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="card-title">
                <h4 class="mb-4">Para Yükle</h4>
            </div>
            <form action="">
                <div class="card-text">
                    <div class="form-row m-0 align-items-center justify-content-center">
                        <h4>
                            <span class="badge bg-danger text-white mr-2">50 TL</span>
                            <span class="badge bg-danger text-white mr-2">100 TL</span>
                            <span class="badge bg-danger text-white mr-2">70 TL</span>
                        </h4>
                        <span class="ml-1 mr-3 align-middle">veya</span>
                        <input class="form-control mb-0 col-md-6"
                               type="text"
                               placeholder="Bir tutar giriniz" />
                        <div class="mx-auto">
                            <button class="btn btn-success mt-2">Bakiye Yükle</button>
                        </div>
                    </div>
                </div>
            </form>
            <div class="card mt-5">
                <div class="card-header bg-primary text-white">İşlem Geçmişi</div>
                <div class="card-body p-0 m-0">
                    <div class="table-responsive-md">
                        <table class="table table-striped table-info m-0">
                            <thead>
                                <tr>
                                    <td>Tutar</td>
                                    <td>İşlem</td>
                                    <td>Tarih</td>
                                    <td>Durum</td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>+100</td>
                                    <td>Bakiye Yükleme</td>
                                    <td>23.05.2019</td>
                                    <td>Onaylandı</td>
                                </tr>
                                <tr>
                                    <td>- 300</td>
                                    <td>Alışveriş</td>
                                    <td>23.05.2021</td>
                                    <td colspan="0"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>