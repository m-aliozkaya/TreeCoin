@model IEnumerable<TreeCoinUI.Entity.Product>

@{
    ViewBag.Title = "Index";
}


<div class="container" style="max-width: 1000px">

    @if (Model.Count() == 0)
    {
        <div class="alert alert-warning">Ürün Bulunamadı</div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3 product">
                    <div class="card p-3">
                        <h3 class="card-title text-center">@item.Name</h3>
                        <img class="card-img-top"
                             src="~/Images/products/@item.Image"
                             alt="@item.Name" />
                        <div class="card-body d-flex justify-content-center mt-4">
                            <a href="#modalLogin" class="btn btn-danger" data-toggle="modal">Satın al</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    }


</div>

